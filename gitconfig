[core]
	pager = delta
	excludesfile = ~/.gitignore

[user]
	name = Andreas Alin
	email = andreas.alin@gmail.com

[receive]
	denyNonFastforwards = true

[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	st = status
	standup = shortlog --since=yesterday

[status]
	color = auto

[pager]
	color = true

[delta]
	navigate = true
	side-by-side = true

[diff]
	colorMoved = default
	color = auto

[interactive]
	diffFilter = delta --color-only

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool "vimdiff"]
	cmd = nvim -d "$LOCAL" "$MERGED" "$REMOTE"
	trustExitCode = true

[color]
	grep = auto
	ui = auto

[push]
	default = current

[difftool]
	prompt = false

[pull]
	rebase = true

[init]
	defaultBranch = main
